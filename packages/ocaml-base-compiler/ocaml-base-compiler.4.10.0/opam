opam-version: "2.0"
synopsis: "Official release 4.10.0"
maintainer: "platform@lists.ocaml.org"
authors: "Xavier Leroy and many contributors"
homepage: "https://ocaml.org"
bug-reports: "https://github.com/ocaml/ocaml/issues"
dev-repo: "git://github.com/ocaml/ocaml"
depends: [
  "ocaml" {= "4.10.0" & post}
  "base-unix" {post}
  "base-bigarray" {post}
  "base-threads" {post}
]
depopts: [
  "base-flambda"
  "base-afl"
  "base-unsafe-string"
  "base-no-flat-float-array"
  "base-frame-pointers"
  "base-spacetime"
  "base-no-nativecode"
]
conflict-class: "ocaml-core-compiler"
flags: compiler
setenv: CAML_LD_LIBRARY_PATH = "%{lib}%/stublibs"
build: [
  [
    "./configure"
    "--prefix=%{prefix}%"
    "-C"
    "CC=cc" {os = "openbsd" | os = "freebsd" | os = "macos"}
    "ASPP=cc -c" {os = "openbsd" | os = "freebsd" | os = "macos"}
    "--enable-flambda" {base-flambda:installed}
    "--with-afl" {base-afl:installed}
    "--disable-force-safe-string" {base-unsafe-string:installed}
    "DEFAULT_STRING=unsafe" {base-unsafe-string:installed}
    "--disable-flat-float-array" {base-no-flat-float-array:installed}
    "--enable-frame-pointers" {base-frame-pointers:installed}
    "--enable-spacetime" {base-spacetime:installed}
    "--disable-native-compiler" {base-no-nativecode:installed}
  ]
  [make "-j%{jobs}%" {os != "cygwin"} "world"]
  [make "-j%{jobs}%" {os != "cygwin"} "world.opt"]
]
install: [make "install"]
url {
  src: "https://github.com/ocaml/ocaml/archive/4.10.0.tar.gz"
  checksum: "sha256=58bae0f0a79daf86ec755a173e593fef4ef588f15c6185993af88ceb9722bc39"
}
extra-files: ["ocaml-base-compiler.install" "md5=3e969b841df1f51ca448e6e6295cb451"]
post-messages: [
  "A failure in the middle of the build may be caused by build parallelism
   (enabled by default).
   Please file a bug report at https://github.com/ocaml/ocaml/issues"
  {failure & jobs > 1 & os != "cygwin"}
  "You can try installing again including --jobs=1
   to force a sequential build instead."
  {failure & jobs > 1 & os != "cygwin" & opam-version >= "2.0.5"}
]
